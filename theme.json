{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1440px"
        },
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "primary",
                    "color": "#FF7500",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#FF5500",
                    "name": "Secondary"
                }
            ]
        },
        "spacing": {
            "customPadding": true,
            "customMargin": true,
            "units": [
                "px",
                "rem",
                "%",
                "vw"
            ],
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "0.5rem",
                    "name": "XS"
                },
                {
                    "slug": "sm",
                    "size": "1rem",
                    "name": "Small"
                },
                {
                    "slug": "md",
                    "size": "2rem",
                    "name": "Medium"
                },
                {
                    "slug": "lg",
                    "size": "4rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "6rem",
                    "name": "XL"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "defaultFontSizes": false,
            "fontFamilies": [
                {
                    "fontFamily": "Inter, system-ui, sans-serif",
                    "name": "Inter",
                    "slug": "inter"
                },
                {
                    "fontFamily": "\"Space Grotesk\", system-ui, sans-serif",
                    "name": "Space Grotesk",
                    "slug": "space-grotesk"
                },
                {
                    "fontFamily": "Rajdhani, sans-serif",
                    "name": "Rajdhani",
                    "slug": "rajdhani"
                }
            ],
            "fontSizes": [
                {
                    "slug": "xs",
                    "size": "0.75rem",
                    "name": "Extra Small"
                },
                {
                    "slug": "sm",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "base",
                    "size": "1rem",
                    "name": "Base"
                },
                {
                    "slug": "lg",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "2rem",
                    "name": "Extra Large"
                },
                {
                    "name": "XL",
                    "slug": "xl",
                    "size": "clamp(2rem, 4vw, 4rem)"
                }
            ]
        },
        "border": {
            "customColor": true,
            "customRadius": true,
            "radius": [
                "2px",
                "4px",
                "8px",
                "16px"
            ]
        },
        "shadow": {
            "presets": [
                {
                    "slug": "soft",
                    "name": "Soft",
                    "shadow": "0 4px 12px rgba(0,0,0,0.08)"
                },
                {
                    "slug": "medium",
                    "name": "Medium",
                    "shadow": "0 8px 24px rgba(0,0,0,0.12)"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--gray-900)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)",
            "fontSize": "var(--wp--preset--font-size--base)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "fontWeight": "600"
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "padding": {
                        "left": "2rem",
                        "right": "2rem"
                    }
                }
            },
            "core/columns": {
                "spacing": {
                    "margin": {
                        "bottom": "0"
                    }
                }
            },
            "core/column": {
                "spacing": {
                    "margin": {
                        "bottom": "0"
                    }
                }
            }
        }
    }
}