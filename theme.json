{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1440px"
        },
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "primary",
                    "color": "#FF7500",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#FF5500",
                    "name": "Secondary"
                },
                {
                    "slug": "accent",
                    "color": "#47d37c",
                    "name": "Accent"
                },
                {
                    "slug": "accent-2",
                    "color": "#3b97ff",
                    "name": "Accent 2"
                },
                {
                    "slug": "accent-3",
                    "color": "#9e90ff",
                    "name": "Accent 3"
                },
                {
                    "slug": "accent-4",
                    "color": "#001e47",
                    "name": "Accent 4"
                }
            ]
        },
        "spacing": {
            "defaultSpacingSizes": false,
            "blockGap": "clamp(0.5rem, 4vw, 2rem)",
            "units": [
                "px",
                "rem",
                "%",
                "vw"
            ],
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "clamp(0.25rem, 0.5vw, 0.5rem)",
                    "name": "XS"
                },
                {
                    "slug": "sm",
                    "size": "clamp(0.5rem, 1vw, 1rem)",
                    "name": "Small"
                },
                {
                    "slug": "md",
                    "size": "clamp(1rem, 2vw, 2rem)",
                    "name": "Medium"
                },
                {
                    "slug": "lg",
                    "size": "clamp(2rem, 4vw, 4rem)",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "clamp(3rem, 6vw, 6rem)",
                    "name": "XL"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "defaultFontSizes": false,
            "fontFamilies": [
                {
                    "fontFamily": "Inter, system-ui, sans-serif",
                    "name": "Inter",
                    "slug": "inter"
                },
                {
                    "fontFamily": "\"Space Grotesk\", system-ui, sans-serif",
                    "name": "Space Grotesk",
                    "slug": "space-grotesk"
                },
                {
                    "fontFamily": "Rajdhani, sans-serif",
                    "name": "Rajdhani",
                    "slug": "rajdhani"
                }
            ],
            "fontSizes": [
                {
                    "slug": "sm",
                    "name": "Small",
                    "size": "clamp(1rem, 0.7vw + 0.75rem, 1.125rem)"
                },
                {
                    "slug": "base",
                    "name": "Base",
                    "size": "clamp(1rem, 0.6vw + 1rem, 1.3rem)"
                },
                {
                    "slug": "lg",
                    "name": "Large",
                    "size": "clamp(20px, 2vw + 16px, 32px)"
                },
                {
                    "slug": "xl",
                    "name": "Extra Large",
                    "size": "clamp(1.8rem, 3vw + 1.2rem, 3.2rem)"
                },
                {
                    "slug": "xxl",
                    "name": "Hero",
                    "size": "clamp(2.2rem, 5vw + 1rem, 4.5rem)"
                }
            ]
        },
        "border": {
            "customColor": true,
            "customRadius": true,
            "radius": [
                {
                    "slug": "xs",
                    "radius": "2px",
                    "name": "XS"
                },
                {
                    "slug": "sm",
                    "radius": "4px",
                    "name": "Small"
                },
                {
                    "slug": "md",
                    "radius": "8px",
                    "name": "Medium"
                },
                {
                    "slug": "lg",
                    "radius": "16px",
                    "name": "Large"
                }
            ]
        },
        "shadow": {
            "presets": [
                {
                    "slug": "soft",
                    "name": "Soft",
                    "shadow": "0 4px 12px rgba(0,0,0,0.08)"
                },
                {
                    "slug": "medium",
                    "name": "Medium",
                    "shadow": "0 8px 24px rgba(0,0,0,0.12)"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--black)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--base)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "fontWeight": "600"
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "padding": {
                        "left": "2rem",
                        "right": "2rem",
                        "top": "clamp(2rem, 4vw, 4rem)",
                        "bottom": "clamp(2rem, 4vw, 4rem)"
                    }
                }
            },
            "core/columns": {
                "spacing": {
                    "margin": {
                        "bottom": "0"
                    }
                }
            },
            "core/column": {
                "spacing": {
                    "margin": {
                        "bottom": "0"
                    }
                }
            }
        }
    }
}