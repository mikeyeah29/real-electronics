{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1440px"
        },
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "gray-100",
                    "color": "#f5f5f5",
                    "name": "Light Gray"
                },
                {
                    "slug": "gray-400",
                    "color": "#a3a3a3",
                    "name": "Mid Gray"
                },
                {
                    "slug": "gray-900",
                    "color": "#1a1a1a",
                    "name": "Dark Gray"
                },
                {
                    "slug": "primary",
                    "color": "#2563eb",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#f59e0b",
                    "name": "Secondary"
                }
            ]
        },
        "spacing": {
            "customPadding": true,
            "customMargin": true,
            "units": [
                "px",
                "rem",
                "%",
                "vw"
            ],
            "spacingSizes": [
                {
                    "slug": "xs",
                    "size": "0.5rem",
                    "name": "XS"
                },
                {
                    "slug": "sm",
                    "size": "1rem",
                    "name": "Small"
                },
                {
                    "slug": "md",
                    "size": "2rem",
                    "name": "Medium"
                },
                {
                    "slug": "lg",
                    "size": "4rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "6rem",
                    "name": "XL"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "defaultFontSizes": false,
            "fontFamilies": [
                {
                    "slug": "system",
                    "name": "System",
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
                }
            ],
            "fontSizes": [
                {
                    "slug": "xs",
                    "size": "0.75rem",
                    "name": "Extra Small"
                },
                {
                    "slug": "sm",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "base",
                    "size": "1rem",
                    "name": "Base"
                },
                {
                    "slug": "lg",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "2rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xxl",
                    "size": "3rem",
                    "name": "XXL"
                }
            ]
        },
        "border": {
            "customColor": true,
            "customRadius": true,
            "radius": [
                "2px",
                "4px",
                "8px",
                "16px"
            ]
        },
        "shadow": {
            "presets": [
                {
                    "slug": "soft",
                    "name": "Soft",
                    "shadow": "0 4px 12px rgba(0,0,0,0.08)"
                },
                {
                    "slug": "medium",
                    "name": "Medium",
                    "shadow": "0 8px 24px rgba(0,0,0,0.12)"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--gray-900)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)",
            "fontSize": "var(--wp--preset--font-size--base)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "fontWeight": "600"
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            }
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": "6px"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "right": "1.25rem",
                        "bottom": "0.75rem",
                        "left": "1.25rem"
                    }
                },
                "typography": {
                    "fontWeight": "600"
                }
            },
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--md)",
                        "right": "var(--wp--preset--spacing--md)",
                        "bottom": "var(--wp--preset--spacing--md)",
                        "left": "var(--wp--preset--spacing--md)"
                    }
                }
            }
        }
    }
}