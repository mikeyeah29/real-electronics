{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "real-electronics/contact-info",
    "title": "Contact Information",
    "category": "widgets",
    "icon": "phone",
    "description": "Displays contact details such as address, phone, email, and opening hours.",
    "supports": {
        "html": false
    },
    "attributes": {
        "address": {
            "type": "string",
            "default": ""
        },
        "phone": {
            "type": "string",
            "default": ""
        },
        "email": {
            "type": "string",
            "default": ""
        },
        "hours": {
            "type": "string",
            "default": ""
        }
    },
    "editorScript": "file:./index.js",
    "style": "file:./style.css",
    "editorStyle": "file:./editor.css",
    "render": "file:./render.php"
}